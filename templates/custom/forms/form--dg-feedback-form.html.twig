{#
/**
* @file
* Theme override for a 'form' element.
*
* Available variables
* - attributes: A list of HTML attributes for the wrapper element.
* - children: The child elements of the form.
*
* @see template_preprocess_form()
*/
#}

{{ attach_library('gent_base/accordion') }}

<div class="feedback-form box-no-icon accordion">
  <h2><button class="accordion--button" aria-expanded="false" aria-controls="feedback-form-content">{{ 'Can we improve something about this page? Let us know!'|t }}</button></h2>
  <div id="feedback-form-content" class="accordion--content" aria-hidden="true">
    <h3>{{ 'You can contact Gentinfo for personal questions or complaints.'|t }}</h3>

    <p class="">{{ 'How to reach?'|t }}</p>

    <ul class="icon-list">
      <li><i class="icon-phone"></i><span>{{ 'By phone: <a href=":tel">09 210 10 10</a> (from monday till saturday from 08:00 till 19:00)'|t({':tel': 'tel: 09 210 10 10'}) }}</span></li>
      <li><i class="icon-envelope"></i><span>{{ 'Send us an <a href=":url">email</a>'|t({':url': 'mailto: info@stad.gent'}) }}</span></li>
      <li><i class="icon-twitter-outline"></i><span>{{ 'Through the <a href=":url">Twitter account</a> of the City of Gent (<a href=":url">@StadGent</a>)'|t({':url': 'https://twitter.com/stadgent'}) }}</span></li>
      <li><i class="icon-document"></i><span>{{ 'Through the <a href=":url">contact form</a>'|t({':url': '#'}) }}</span></li>
      <li><i class="icon-chat-round"></i><span>{{ 'Through the <a href=":url">chat</a>'|t({':url': '#'}) }}</span></li>
    </ul>

    <form{{ attributes.addClass('no-style') }}>
      {{ children }}
    </form>

  </div>
</div>
