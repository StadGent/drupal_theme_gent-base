{{ attach_library('gent_base/image-collections') }}

{% set classes = [
  'image-gallery',
  'js-lightbox',
] %}
{% set title_classes = [
  'field__label',
  label_display == 'visually_hidden' ? 'visually-hidden',
] %}

{% if not label_hidden %}
  <div{{ title_attributes.addClass(title_classes) }}>{{ label }}</div>
{% endif %}
{% if items|length > 1 %}
  <ul{{ attributes.addClass(classes) }}>
    {% for item in items %}
      <li>
        {% block gallery %}
          {{ item.content }}
        {% endblock %}
      </li>
    {% endfor %}
    {% block gallery_extras %}
      <li class="image-gallery__show-more">
        <div class="show-more__content">
          <span class="show-more__total">{{ items|length }}</span>
          <span>{{ 'Show all photos'|t }}
            <i class="icon-fullscreen-enter"
               aria-hidden="true"></i>
        </span>
        </div>
      </li>
    {% endblock %}
  </ul>
{% else %}
  {%- for item in items %}
    <div {{ attributes.addClass(classes) }}>
      {{ block('gallery') }}
    </div>
  {% endfor -%}
{% endif %}
