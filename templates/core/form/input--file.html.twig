{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}

{{ attach_library('gent_base/file') }}

<div class="file">
  <input {{ attributes.setAttribute('aria-describedby', attributes.id ~ '-description') }} />{{ children }}
  <span id="{{ attributes.id ~ '-description' }}"
        class="file__button">{{ 'Select your files here to upload'|t }}</span>
</div>
